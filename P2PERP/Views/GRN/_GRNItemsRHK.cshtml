@model IEnumerable<P2PLibray.GRN.GRN>

<div class="table-responsive">
    <table  class="table table-striped table-bordered" id="ListTable">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="selectAll"></th>
                <th>Sr.No.</th>
                <th>GRN Code</th>
                <th>Item Name</th>
                <th>Quantity</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox" class="row-select" value="@i"></td>
                        <td>@i</td>
                        <td>@item.GRNCode</td>
                        <td>@item.ItemName</td>
                        <td>@item.Quantity</td>


                    </tr>
                    i++;
                }
            }
            else
            {
                <tr><td colspan="4" class="text-center">No GRN Items found</td></tr>
            }
        </tbody>
    </table>
</div>

