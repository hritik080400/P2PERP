@model IEnumerable<P2PLibray.GRN.GRN>

<div class="table-responsive">
    <table class="table table-striped table-bordered" id="ListTable">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="selectAll"></th>
                <th>Sr.No.</th>
                <th>GRN Code</th>
                <th>PO Code</th>
                <th>Vendor</th>
                <th>Invoice No</th>
  
                <th>Added By</th>
                <th>Added Date</th>
              
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var i = 1;
                foreach (var item in Model)
                {
                    
                    <tr>

                        <td><input type="checkbox" class="row-select" value="@i"></td>
                        <td>@i</td>
                        <td>@item.GRNCode</td>
                        <td>@item.POCode</td>
                        <td>@item.Vendor</td>
                        <td>@item.InvoiceNo</td>

                        <td>@item.AddedBy</td>
                        <td>@(item.AddedDate.HasValue? item.AddedDate.Value.ToString("dd'/'MM'/'yyyy", System.Globalization.CultureInfo.InvariantCulture): "")</td>
                       
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr><td colspan="8" class="text-center">No GRNs found</td></tr>
            }
        </tbody>
    </table>
</div>

