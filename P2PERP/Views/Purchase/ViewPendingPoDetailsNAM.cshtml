@{
    Layout = null;
    ViewBag.Title = "";
    var poCode = (string)ViewBag.POCode ?? "";
}


<div class="container my-4">
  

    <input type="hidden" id="poCode" value="@ViewBag.POCode" />

    <!-- Invoice + Vendor Details -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <!-- Invoice To -->
                <div class="col-md-6">
                    <h6>Invoice To</h6>
                    <div class="mb-2">
                        <label class="form-label">PO No</label>
                        <input id="po_no" class="form-control" readonly />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">PO Date</label>
                        <input id="po_date" class="form-control" readonly />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Company Name</label>
                        <input id="companyName" class="form-control" readonly />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Delivery Address</label>
                        <textarea id="deliveryAddress" class="form-control" rows="3" readonly></textarea>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Terms & Conditions</label>
                        <div id="termsCondition" class="small text-muted"></div>
                    </div>
                </div>

                <!-- Vendor Details -->
                <div class="col-md-6">
                    <h6>Vendor Details</h6>
                    <div class="mb-2">
                        <label class="form-label">Vendor Name</label>
                        <input id="vendorName" class="form-control" readonly />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Vendor Company</label>
                        <input id="vendorCompany" class="form-control" readonly />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Vendor Contact</label>
                        <input id="vendorContact" class="form-control" readonly />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Vendor Address</label>
                        <textarea id="vendorAddress" class="form-control" rows="3" readonly></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Item Details -->
    <div class="card">
        <div class="card-header">Item Details</div>
        <div class="card-body p-0">
            <table class="table table-bordered m-0" id="poItemsTable">
                <thead class="table-light">
                    <tr>
                        <th>SR NO</th>
                        <th>ITEM CODE</th>
                        <th>ITEM NAME</th>
                        <th>ITEM DESCRIPTION</th>
                        <th>QTY</th>
                        <th>UOM</th>
                        <th>UNIT RATE</th>
                        <th>DISCOUNT %</th>
                        <th>GST %</th>
                        <th class="text-end">AMOUNT</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                    <tr>
                        <th colspan="9" class="text-end">Subtotal</th>
                        <th id="ftSubtotal" class="text-end">0.00</th>
                    </tr>
                    <tr>
                        <th colspan="9" class="text-end">Transportation / Shipping</th>
                        <th id="ftShipping" class="text-end">0.00</th>
                    </tr>
                    <tr>
                        <th colspan="9" class="text-end">Grand Total</th>
                        <th id="ftGrandTotal" class="text-end">0.00</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-3 text-center">
        <button id="btnApprove" class="btn btn-success">Approve</button>
        <button id="btnReject" class="btn btn-danger">Reject</button>
        <button id="btnSendApproval" class="btn btn-warning" disabled>Send for Approval</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        const poCode = $("#poCode").val();

        function round2(n) { return Number((n || 0).toFixed(2)); }

        function calcLine(qty, unit, discPct, gstPct) {
            qty = Number(qty || 0); unit = Number(unit || 0); discPct = Number(discPct || 0); gstPct = Number(gstPct || 0);
            const base = qty * unit;
            const discAmt = base * (discPct / 100);
            const taxable = base - discAmt;
            const gstAmt = taxable * (gstPct / 100);
            const lineTotal = taxable + gstAmt;
            return { lineTotal: round2(lineTotal) };
        }

        // Load header
        $.getJSON('/Purchase/GetPOHeaderNAM', { poCode }, function (h) {
            if (!h) { alert('Header not found'); return; }
            $("#po_no").val(h.POCode || '');
            $("#po_date").val(h.AddedDateVK || '');
            $("#companyName").val(h.InvoiceToCompanyName || '');
            $("#deliveryAddress").val(h.DeliveryAddress || '');
            $("#termsCondition").text(h.TermConditionName || '');
            $("#vendorName").val(h.VendorName || '');
            $("#vendorCompany").val(h.VendorCompanyName || '');
            $("#vendorContact").val(h.VendorContact || '');
            $("#vendorAddress").val(h.VendorAddress || '');
        });

        // Load items
        $.getJSON('/Purchase/GetPOItemsNAM', { poCode }, function (rows) {
            const $tb = $("#poItemsTable tbody").empty();
            if (!rows || rows.length === 0) {
                $tb.append('<tr><td colspan="10" class="text-center text-muted">No items</td></tr>');
                return;
            }
            let subtotal = 0;
            rows.forEach((r, idx) => {
                const c = calcLine(r.Quantity, r.CostPerUnit, r.Discount, r.GSTPct);
                subtotal += c.lineTotal;
                $tb.append(`
            <tr>
                <td>${idx + 1}</td>
                <td>${r.ItemCode || ''}</td>
                <td>${r.ItemName || ''}</td>
                <td>${r.Description || ''}</td>
                <td>${r.Quantity}</td>
                <td>${r.UOMName}</td>
                <td>${r.CostPerUnit.toFixed(2)}</td>
                <td>${r.Discount.toFixed(2)}</td>
                <td>${r.GSTPct.toFixed(2)}</td>
                <td class="text-end">${c.lineTotal.toFixed(2)}</td>
            </tr>`);
            });
            $("#ftSubtotal").text(subtotal.toFixed(2));
            const shipping = Number($("#ftShipping").text() || 0);
            $("#ftGrandTotal").text((subtotal + shipping).toFixed(2));

            if ((subtotal + shipping) > 500000) $("#btnSendApproval").prop("disabled", false);
        });

        // Approve PO
        $("#btnApprove").click(function () {
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to approve PO " + poCode + "?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, approve it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Purchase/ApprovePONAM', { poCode: poCode }, function (res) {
                        if (res.success) {
                            showToast(`PO ${poCode} has been approved.`, 'success');
                            $("#poModal").modal('hide');

                            // Reload pending table if exists
                            if (typeof pendingTable !== 'undefined') {
                                pendingTable.ajax.reload();
                            }
                        } else {
                            showToast(res.message || 'Failed to approve PO.', 'danger');
                        }
                    });
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    showToast("Approval cancelled.", 'info');
                }
            });
        });

        // Reject button in modal
        $("#btnReject").click(function () {
            const poCode = $("#poCode").val(); // get selected PO code

            Swal.fire({
                title: "Are you sure?",
                text: "Do You Want Reject This PO!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, reject it!",
                cancelButtonText: "No, cancel!",
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Purchase/RejectPONAM', { poCode: poCode }, function (res) {
                        if (res.success) {
                            // Close the modal
                            $("#poModal").modal('hide');

                            // Optional: show toast instead of OK alert
                            showToast(`PO ${poCode} has been rejected.`, 'success');

                            // Reload pending table if exists
                            if (typeof pendingTable !== 'undefined') {
                                pendingTable.ajax.reload();
                            }
                        } else {
                            showToast(res.message || "Failed to reject PO.", 'danger');
                        }
                    });
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    showToast("PO is safe :)", 'info');
                }
            });
        });



        // Send for Approval
        $("#btnSendApproval").click(function () {
            $.post('/Purchase/SendForApproval', { poCode: poCode }, function (res) {
                alert(res.message || 'PO Sent for Higher Approval');
                if (res.success) window.location.href = '/Purchase/PendingPoNAM';
            });
        });
    });
</script>

<head>
    <style>
        input[readonly], textarea[readonly] {
            background-color: #f0f0f0 !important;
            color: #333;
        }

        .container {
            max-width: 1100px;
        }

        .card-header {
            font-weight: bold;
            background-color: #e9ecef;
        }
    </style>
</head>
